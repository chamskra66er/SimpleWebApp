@model CarServise.Models.CartViewModels.Cart
<a class="fas fa-shopping-cart" asp-controller="Cart" asp-action="Index">
    @if (Model.Lines.Count() > 0)
    {
        <br/>
        <small class="navbar-text">
            @Model.Lines.Sum(x => x.Quantity) шт. - @Model.ComputerTotalValue().ToString("c")
        </small>
    }
</a>