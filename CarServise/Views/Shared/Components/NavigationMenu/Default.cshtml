@model IEnumerable<string>

<a class="btn btn-block btn-secondary" asp-action="Index" asp-controller="Forum" asp-route-category="">
    Home
</a>
@foreach (var category in Model)
{
    <a class="btn btn-block @(category==ViewBag.SelectedCategory ? "btn-primary" : "btn-secondary")"
       asp-action="Index"
       asp-controller="Forum"
       asp-route-category="@category"
       asp-route-forumPage="1">
        @category
    </a>
}