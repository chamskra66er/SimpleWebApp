@model IEnumerable<CarServise.Data.Models.Order>

@if (Model.Count() > 0) {

<table class="table table-bordered table-striped">
    <tr><th>Name</th><th>Zip</th><th colspan="2">Details</th><th></th></tr>
    @foreach (var order in Model) {
    <tr>
        <td>@order.Name</td>
        <td>@order.Zip</td>
        <th>Товар</th>
        <th>Количество</th>
        <td>
            <form asp-action="Shipped" asp-controller="Order" method="post">
                <input type="hidden" name="orderId" value="@order.OrderId" />
                <button type="submit" class="btn btn-sm btn-danger">
                    Отправить
                </button>
            </form>
        </td>
    </tr>
    @foreach (var line in order.Lines) {
    <tr>
        <td colspan="2"></td>
        <td>@line.Forum.Comment</td>
        <td>@line.Quantity</td>
        <td></td>
    </tr>

            }
        }
</table>
} else {
<div class="text-center">Нет отгруженных заказов</div>
}
