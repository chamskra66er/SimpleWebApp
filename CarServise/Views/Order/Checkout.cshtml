@model CarServise.Data.Models.Order
<h2>Оплатить сейчас</h2>
<p>Пожалуйста, введите ваши данные, и мы отправим ваш товар прямо сейчас!</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post">
    <h3>Данные Получателя</h3>
    <div class="form-group">
        <label>Имя:</label><input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Адресс:</label><input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label>Страна:</label><input asp-for="Country" class="form-control" />
    </div>
    <div class="form-group">
        <label>Почтовый индекс</label><input asp-for="Zip" class="form-control" />
    </div>
    <h3>Способ доставки</h3>
    <div class="form-group">
        <select asp-for="Deliver" class="custom-select mr-sm-2">
            <option value="">Select item</option>
            <option value="DHL">DHL</option>
            <option value="FeedEx">FeedEx</option>
            <option value="Simple">Simple</option>
        </select>
    </div>
    <input type="hidden" name="TotalPrice"
           value="@Model.TotalPrice" />
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Завершить заказ" />
    </div>
</form>
