@model CarServise.Models.ForumViewModels.AddForumModel
@{
    Layout = "_Layout";
}

<h3>Создание нового заказа</h3>

<tr>
    <td>
        <form asp-action="AddForum" asp-controller="Forum" method="post" id="addPostForm" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <span class="form-group">Выбрать изображения</span>
                <label class="btn btn-success btn-file btn-sm" title="Выбрать изображение">
                    <span class="glyphicon glyphicon-picture"></span>
                    <input type="file" name="UploadImage" style="display:none" />
                </label>
            </div>
            <div class="form-group">
                <span class="form-group">Выбрать видео файл</span>
                <label class="btn btn-success btn-file btn-sm" title="Выбрать видео">
                    <span class="glyphicon glyphicon-hd-video"></span>
                    <input type="file" name="UploadVideo" style="display:none" />
                </label>
            </div>
            <div class="form-group">
                <span class="form-group">Выбрать .pdf .xlsx</span>
                <label class="btn btn-success btn-file btn-sm" title="Выбрать видео">
                    <span class="glyphicon glyphicon-file"></span>
                    <input type="file" name="UploadFile" style="display:none" />
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Title">Марка машины</label>
                <input class="form-control" asp-for="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Описание поломки</label>
                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value">Сумма ремонта</label>
                <input class="form-control" asp-for="Value" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFinish">Марка машины</label>
                <input class="form-control" type="datetime" asp-for="DateFinish" />
                <span asp-validation-for="DateFinish" class="text-danger"></span>
            </div>
            <button type="submit" id="ReplyButton" class="btn btn-submitPost">Разместить тему</button>
            <a class="btn btn-canselPost" asp-controller="Forum" asp-action="Index">Отменить</a>
        </form>
    </td>
</tr>